<?xml version="1.0"?>
<robot name="Segwayrmp" xmlns:xacro="http://ros.org/wiki/xacro">
  <material name="Black">
    <color rgba="0 0 0 1" />
  </material>
  <material name="Grey">
    <color rgba="0.8 0.8 0.8 1" />
  </material>
  <material name="Orange">
    <color rgba="1 0.6 0 1" />
  </material>
  <material name="White">
    <color rgba="1 1 1 1" />
  </material>

  <xacro:property name="wheel_length" value="0.05" />
  <xacro:property name="wheel_radius" value="0.1" />

  <link name="base_link" />

  <!-- base_footprint -->
  <link name="base_footprint">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.61 0.18 0.09" />
      </geometry>
    </collision>

    <visual>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <box size="0.61 0.18 0.09" />
      </geometry>
      <material name="Orange" />
    </visual>

    <inertial>
      <origin xyz="-0.05 0 0" rpy="0 0 0" />
      <mass value="16" />
      <inertia ixx="0.06192" ixy="0" ixz="0" iyy="0.28416" iyz="0" izz="0.318336" />
    </inertial>
  </link>

  <joint name="base_footprint_joint" type="fixed">
    <origin xyz="0.305 0 0.21" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="base_footprint" />
  </joint>

  <!-- Left Rear Wheel Link -->
  <link name="left_rear_wheel">
    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>
    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Black" />
    </visual>

    <inertial>
      <mass value="1.2" />
      <inertia ixx="0.00145833" ixy="0.0" ixz="0.0" iyy="0.00145833" iyz="0.0" izz="0.00125" />
    </inertial>
  </link>

  <joint name="left_rear_wheel_joint" type="continuous">
    <origin xyz="-0.25 0.15 -0.09" rpy="-1.57 0 0" />
    <parent link="base_footprint" />
    <child link="left_rear_wheel" />
    <axis xyz="0 0 1" />
    <dynamics damping="0.2" />
  </joint>

  <!-- Right Rear Wheel Link -->
  <link name="right_rear_wheel">
    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>
    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Black" />
    </visual>

    <inertial>
      <mass value="1.2" />
      <inertia ixx="0.00145833" ixy="0.0" ixz="0.0" iyy="0.00145833" iyz="0.0" izz="0.00125" />
    </inertial>
  </link>

  <joint name="right_rear_wheel_joint" type="continuous">
    <origin xyz="-0.25 -0.15 -0.09" rpy="-1.57 0 0" />
    <parent link="base_footprint" />
    <child link="right_rear_wheel" />
    <axis xyz="0 0 1" />
    <dynamics damping="0.2" />
  </joint>

  <!-- Steering Link -->
  <link name="steering_link">
    <visual>
      <geometry>
        <box size="0.01 0.01 0.01" />
      </geometry>
      <material name="Black" />
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.05" />
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001" />
    </inertial>
  </link>

  <joint name="steering_joint" type="revolute">
    <origin xyz="0.25 0 -0.09" rpy="0 0 0" />
    <parent link="base_footprint" />
    <child link="steering_link" />
    <axis xyz="0 0 1" />
    <limit lower="-0.36" upper="0.36" effort="0.0" velocity="0.0" />
    <dynamics damping="0.2" />
  </joint>

  <!-- Traction Wheel Link -->
  <link name="front_wheel_link">
    <collision>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
    </collision>
    <visual>
      <geometry>
        <cylinder length="${wheel_length}" radius="${wheel_radius}" />
      </geometry>
      <material name="Black" />
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="1.2" />
      <inertia ixx="0.0145833" ixy="0.0" ixz="0.0" iyy="0.0145833" iyz="0.0" izz="0.0125" />
    </inertial>
  </link>

  <joint name="traction_joint" type="continuous">
    <parent link="steering_link" />
    <child link="front_wheel_link" />
    <origin xyz="0 0 0" rpy="-1.57 1.57 0" />
    <axis xyz="0 0 1" />
    <dynamics damping="0.2" />
  </joint>

  <!-- Sensors -->
  <link name="laser_link">
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <geometry>
        <cylinder length="0.01" radius="0.01" />
      </geometry>
    </collision>
    <visual>
      <geometry>
        <cylinder length="0.01" radius="0.01" />
      </geometry>
      <material name="Grey" />
    </visual>
    <inertial>
      <origin xyz="0 0 0" rpy="0 0 0" />
      <mass value="0.1" />
      <inertia ixx="0.00001" ixy="0.0" ixz="0.0" iyy="0.00001" iyz="0.0" izz="0.00001" />
    </inertial>
  </link>
  <joint name="laser_joint" type="fixed">
    <origin xyz="0.565 0 0.26" rpy="0 0 0" />
    <parent link="base_link" />
    <child link="laser_link" />
  </joint>

  <gazebo reference="laser_link">
    <sensor name="laser" type="ray">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>20</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>240</samples>
            <resolution>1.000000</resolution>
            <min_angle>-2.35619</min_angle>
            <max_angle>2.35619</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.3</min>
          <max>30.0</max>
          <resolution>0.015</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="scan" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>laser_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>

  <!-- Gazebo Controls -->
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    <joint name="steering_joint">
      <command_interface name="position" />
      <state_interface name="position" />
    </joint>
    <joint name="traction_joint">
      <command_interface name="velocity" />
      <state_interface name="velocity" />
      <state_interface name="position" />
    </joint>
  </ros2_control>

  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="tricycle_control">
      <parameters>$(find segwayrmp_description)/config/tricycle_drive_controller.yaml</parameters>
    </plugin>
  </gazebo>

</robot>